<div class="contents row">
    <h3><新規投稿ページ></h3>
</div>

<div class="username-comment">
  <span><%= current_user.nickname %></span>
</div>

<%= form_for [@product] do |f| %>
  <div style="margin: 8px ">
    <%= f.text_field :title, placeholder: '温泉の名前'%>
  </div>
  <div style="margin: 8px ">
    <%= f.text_area :explain, placeholder: '温泉の説明（概要）', style: 'width: 100%; height: 200px;' %>
  </div>
  <div style="margin: 8px">
    <%= f.text_field :access, placeholder: 'アクセス', style: 'width: 350px; height: 20px'%>
  </div>
  <div style="float:right; margin: 8px 20px">
    <%= f.submit "送信", class: "btn btn-primary withripple" %>
  </div>
<% end %>