<div class="contents row">
  <div class="post-flame">
    <div class="post-name">
      <p>温泉一覧</p>
      <% @products.each do |product|%>
      
      
       <a href="/products/<%= product.id %>/reviews/new" title="<%= product.title%>">
        <div class="post-itiran">
         <div class="title_">
           <%= product.title %>
         </div>
         <div class="image_">
           <img src="<%= product.image_url %>" width="300" height="150"></img>
          </div>
           <div class="text-xsmall">
             <p>
             <%= product.explain %>
           </p>
           </div>
        </div>
       </a>
      
      <% end %>
    </div>
  </div>
</div>