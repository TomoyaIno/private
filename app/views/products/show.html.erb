 <div class="main_wrapper">
  <h3><詳細ページ></h3>
  <div class="shousai">
   <div class="shousai-title">
     <%= @product.title %>
     </div>
   <div class="shousai-image" style="text-align:center">
     <img src="<%= @product.image_url %>" alt="<%= @product.title %>"width="750" height="350">
     </div>
     <div class="shousai-explain">
      <%= @product.explain %>
     </div>
     
      <div class="example">
       <h2>代表的な温泉</h2>
       <img></img>
       <img></img>
       <img></img>
      </div>
  </div>
  
   <div class="comment-show">
    <h2>口コミ</h2>
     <ul style="padding: 0">
      <% @product.reviews.each do |review| %>
      <li style="border-bottom: dotted">
       <h3><%= review.user.nickname %></h3>
        <p class="text-small">
         <span class="rating-star"><i class="star-actived rate-<%= review.rate %>0"></i></span>
        </p>
       <p><%= review.review%></p>
      </li>
      <% end %>
     </ul>
   </div>
 </div>