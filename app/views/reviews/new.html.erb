<div class="contents row">
    <h3><投稿ページ></h3>
  <div class="toukou-page">
    <div class="toukou-image" style="text-align:center">
     <img src="<%= @product.image_url %>" alt="<%= @product.title %>"width="750" height="350">
    </div>
    <div class="shousai-explain">
      <%= @product.explain %>
     </div>
  </div>
</div>

<%= form_for [@product, @review,] do |f| %>
          <div style="margin: 8px 0">
            <%= f.label :評価, style: { 'margin-right' => 8 } %>
            <%= f.number_field :rate, placeholder: '評価', value: 1, max: 5, min: 1, html: { class: "evaluation", style: 'text-align: right;' } %>
          </div>
          <div style="margin: 8px 0">
            <%= f.text_field :title, placeholder: 'タイトル'%>
          </div>
          <div style="margin: 8px 0">
            <%= f.text_area :review, placeholder: 'レビューを書いてね！', style: 'width: 100%; height: 200px;' %>
          </div>
          <div class="row">
            <div class="col10 push1">
              <%= button_tag type: "submit", class: "btn btn--block" do %>
              投稿する<i class="icon-arrow-right"></i>
              <% end %>
            </div>
          </div>
          <% end %>
